<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="http://localhost:8000/resources/css/signup.css">
</head>

<body>
    <section>
        <div id="error"></div>
        <div class="container">
            <div class="card1">
                <div class="card2">
                    <form action="" method="post">
                        <h4 class="head1">Creating an account on Typing Speed</h4>
                        <h2 class="head2">SignUp</h2><br>

                        <label for="fname"> User Name </label><br>
                        <input class="input" type="text" placeholder="User Name" name="name"><br><br>

                        <label for="email"> E-mail </label><br>
                        <input class="input" type="email" placeholder="E-mail" name="email"><br><br>

                        <label for="pwd"> Password </label><br>
                        <input class="input" type="password" placeholder="Password" name="password"><br><br>

                        <button class="button1" type="submit"> <i class="fa-solid fa-lock"></i> &nbsp Create account
                        </button><br>
                    </form>
                    <h4 class="head3">Already have an account? &nbsp <a href="http://localhost:8000/signin">LogIn</a>
                    </h4>

                </div>
            </div>
        </div>
        <script>
        const err=document.getElementById("error")
       const form=document.getElementsByTagName("form")[0]
       var formData;
        function getData() {
            formData={
            name:form.name.value,
            email:form.email.value,
            password:form.password.value,
           }
    }
       form.addEventListener("submit",(e)=>{
        e.preventDefault()
        getData()


        fetch("/api/signup", {
        method: "post",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(formData)

      }).then((e) => {
        window.location.href = 'http://localhost:8000/signin'
      }).catch((err)=>{
        window.location.href = 'http://localhost:8000/signup'
        err.innerHTML=err;
      })


       })
        </script>
        <%- include('resources/footer.ejs') -%>