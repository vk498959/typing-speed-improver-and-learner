<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="http://localhost:8000/resources/css/signin.css">
</head>

<body>
    <section>
        <div class="container">
            <div id="error"></div>
            <div class="card1">
                <div class="card2">
                    <form action="" method="post">
                        <h4 class="head1">User Login on Typing Speed</h4>
                        <h2 class="head2">User Login</h2>

                        <label for="email">E-mail: </label><br>
                        <input class="input" type="email" placeholder="E-mail" name="email"><br><br>

                        <label for="pwd">Password: </label><br>
                        <input class="input" type="password" placeholder="password" name="password">

                        <h4 class="head4"> Forgot password?</h4>

                        <button class="button1" type="submit"> <i class="fa-solid fa-user"></i> &nbsp Login </button>

                        <h4 class="head3">Dont't have an account? &nbsp <a
                                href="http://localhost:8000/signup">SignUp</a></h4>
                    </form>
                </div>
            </div>
            <script>
                const err = document.getElementById("error")
                const form = document.getElementsByTagName("form")[0];
                var formData;
                function getData() {
                    formData={
                        email: form.email.value,
                        password: form.password.value
                    }
                }
                form.addEventListener("submit", (e) => {
                    getData()
                    e.preventDefault();
                    fetch("http://localhost:8000/api/signin", {
                        method: "post",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(formData)
                    })
                        .then((e) => {
                            window.location.href = 'http://localhost:8000/home'
                        })
                        .catch((e) => {
                            err.innerHTML = e;
                        })
                })
            </script>
        </div>
        <%- include('resources/footer.ejs') -%>